<Page
    x:Class="KVS_windows.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KVS_windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <!--menu items-->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel x:Name="menuStackPanel" Height="768" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Background="#FF444040">
            <StackPanel x:Name="menuHomeStackPanel" Height="100">
                <Border x:Name="menuHomeBorder" BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                    <TextBlock x:Name="menuHomeTextBlock" TextWrapping="Wrap" Text="Home" Margin="0,0,0,-2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
                </Border>
            </StackPanel>
            <StackPanel x:Name="menuClassStackPanel" Height="100">
                <Border x:Name="menuClassBorder" BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                    <TextBlock x:ConnectionId='2' x:Name="menuClassTextBlock" TextWrapping="Wrap" Text="Klas" Margin="0,0,0,-2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"                                                       />
                </Border>
            </StackPanel>
            <StackPanel x:Name="menuResultStackPanel" Height="100">
                <Border x:Name="menuResultBorder" BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                    <TextBlock x:Name="menuResultTextBlock" TextWrapping="Wrap" Text="Resultaten" Margin="0,0,0,-2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
                </Border>
            </StackPanel>
            <StackPanel x:Name="menuPlanningStackPanel" Height="100">
                <Border x:Name="menuPlanningBorder" BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                    <TextBlock x:Name="menuPlanningTextBlock" TextWrapping="Wrap" Text="Planning" Margin="0,0,0,-2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
                </Border>
            </StackPanel>
            <StackPanel x:Name="menuMessageStackPanel" Height="100">
                <Border x:Name="menuMessageBorder" BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                    <TextBlock x:Name="menuMessageTextBlock" TextWrapping="Wrap" Text="Mededelingen" Margin="0,0,0,-2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
                </Border>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="messagesStackPanel" HorizontalAlignment="Left" Height="383" Margin="305,0,0,0" VerticalAlignment="Top" Width="644">
            <TextBlock x:Name="messageT" TextWrapping="Wrap" Text="Meldingen" Height="35" FontSize="25" Margin="0,0,3,0"/>
        </StackPanel>

        <StackPanel x:Name="overviewStackPanel" HorizontalAlignment="Left" Height="385" Margin="305,383,0,0" VerticalAlignment="Top" Width="644">
            <TextBlock x:ConnectionId='1' x:Name="messageT_Copy1" TextWrapping="Wrap" Text="Overzicht resultaten" Height="35" FontSize="25"                                                   />
        </StackPanel>
        <StackPanel x:Name="resultsStackPanel" HorizontalAlignment="Left" Height="383" Margin="949,0,0,0" VerticalAlignment="Top" Width="417">
            <TextBlock x:Name="messageT_Copy" TextWrapping="Wrap" Text="Resultaten invoeren" Height="35" FontSize="25"/>
        </StackPanel>
        <StackPanel x:Name="calendarStackPanel" HorizontalAlignment="Left" Height="385" Margin="949,383,0,0" VerticalAlignment="Top" Width="417">
            <TextBlock x:Name="messageT_Copy2" TextWrapping="Wrap" Height="35" FontSize="25">
            	<Run Text="Agenda"/>
            	<LineBreak/>
            	<Run/>
            </TextBlock>
        </StackPanel>

    </Grid>
</Page>

