<Page
    x:Class="KVS_windows.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KVS_windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <!--menu items-->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel x:Name="menuStackPanel" Height="768" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Background="#FF444040">
            <Border BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                <TextBlock x:Name="homeMenuTextBlock_Copy" TextWrapping="Wrap" Text="Home" Margin="116.497,32,115.503,36" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                <TextBlock x:Name="classMenuTextBox" TextWrapping="Wrap" Text="Klas" Margin="116.994,32,115.006,36" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                <TextBlock x:Name="planningMenuTextBox" TextWrapping="Wrap" Text="Planning" Margin="103,29,90,39" VerticalAlignment="Center" FontSize="25" HorizontalAlignment="Left"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                <TextBlock x:Name="resultsMenuTextBox" TextWrapping="Wrap" Text="Resultaten" Margin="90,17,78,21" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="0,0,0,2" Height="100">
                <TextBlock x:Name="messagesMenuTextBox" TextWrapping="Wrap" Text="Meldingen" Margin="90,34,91,34" VerticalAlignment="Center" FontSize="25" HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>
        <StackPanel x:Name="messagesStackPanel" HorizontalAlignment="Left" Height="383" Margin="305,0,0,0" VerticalAlignment="Top" Width="644">
            <TextBlock x:Name="messageT" TextWrapping="Wrap" Text="Meldingen" Height="35" FontSize="25" Margin="0,0,3,0"/>
        </StackPanel>

        <StackPanel x:Name="overviewStackPanel" HorizontalAlignment="Left" Height="385" Margin="305,383,0,0" VerticalAlignment="Top" Width="644">
            <TextBlock x:ConnectionId='1' x:Name="messageT_Copy1" TextWrapping="Wrap" Text="Overzicht resultaten" Height="35" FontSize="25"                                                   />
        </StackPanel>
        <StackPanel x:Name="resultsStackPanel" HorizontalAlignment="Left" Height="383" Margin="949,0,0,0" VerticalAlignment="Top" Width="417">
            <TextBlock x:Name="messageT_Copy" TextWrapping="Wrap" Text="Resultaten invoeren" Height="35" FontSize="25"/>
        </StackPanel>
        <StackPanel x:Name="calendarStackPanel" HorizontalAlignment="Left" Height="385" Margin="949,383,0,0" VerticalAlignment="Top" Width="417">
            <TextBlock x:Name="messageT_Copy2" TextWrapping="Wrap" Height="35" FontSize="25">
            	<Run Text="Agenda"/>
            	<LineBreak/>
            	<Run/>
            </TextBlock>
        </StackPanel>

    </Grid>
</Page>

